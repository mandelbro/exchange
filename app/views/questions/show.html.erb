
<div class="row">
  <div class="columns large-10">
    <div class="row">
      <div class="columns">
        <h1><%= @question.question %></h1>
      </div>
    </div>

    <hr class="section-spacer">

    <div class="row">
      <div class="columns large-6">
        <%= markdown @question.answer %>
      </div>
    </div>
  </div>

  <div class="columns large-2 sidebar">

    <hr class="show-for-small-only">
    <br>
    <ul class="side-nav">
      <li><%= link_to "Update Answer", answer_question_path(@question) %></li>
      <li><%= link_to "Edit", [:edit, @question] %></li>

    <% if current_user %>
        <li><%= link_to "Delete", @question, method: :delete %></li>
    <% end %>

      <li><%= link_to "Back", questions_path %></li>
    </ul>

  </div>

</div>

<div class="row">
  <div class="colums">
    <hr>
    <ul class="inline-list">
      <li><h4>Users who have updated this post:</h4></li>
      <% @question.users.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
    </ul>
  </div>
</div>
